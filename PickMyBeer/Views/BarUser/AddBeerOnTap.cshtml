
<html>
<head>
    <script src="http://code.jquery.com/jquery-3.1.0.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/_addBeerOnTap.js">
    </script>
</head>
<body>

    <div class="conatainer">
        <input type="hidden" class="bcid" value=@ViewBag.BCId />
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-lg-6">
                        <h4>Search For A Beer By Its Name</h4>
                        <input type="text" id="beerN" />
                        <button id="searchBeersByName">Search</button>
                    </div>
                    <div class="col-lg-6">
                        <h4>Search For A Beer By The Brewery</h4>
                        <input type="text" id="beerB" />
                        <button id="searchBeersByBrewery">Search</button>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div id="pagingControls">
                        <div class="col-lg-8">
                            <button id="prevPage">Prev Page</button> || <button id="nextPage">Next Page</button>
                        </div>
                        <div class="col-lg-4">
                            <input type="text" id="page" /> <button id="goToPage">Go To Page</button>
                        </div>
                    </div>
                </div>
                <br />
                <hr />
                <div>
                    <table>
                        <thead>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Style</th>
                        <th>Brewery</th>
                        </thead>
                        <tbody id="searchBeers"></tbody>
                    </table>
                </div>
                <hr />
                <div class="row">
                    <div id="pagingControls">
                        <div class="col-lg-8">
                            <button id="prevPage">Prev Page</button> || <button id="nextPage">Next Page</button>
                        </div>
                        <div class="col-lg-4">
                            <input type="text" id="page" /> <button id="goToPage">Go To Page</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div><h2>Beers On Tap</h2></div>
                <hr />
                <div>
                    <ul class="beersOnTap"></ul>
                </div>
            </div>
        </div>
    </div>
    <div class="loadingModal"></div>
</body>
</html>