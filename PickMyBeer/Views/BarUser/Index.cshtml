@model PickMyBeer.Models.BarClient

<html>
<head>
    <script src="http://code.jquery.com/jquery-3.1.0.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/_addBeerOnTap.js">
    </script>
</head>
<body>
    @using (Html.BeginForm("Create", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="conatainer">
            <div class="row">
                <br />
                <br />
                <br />
                <div class="col-lg-4">
                    <br/>
                    <br />
                    <br />
                    @if (Model.BImgLog != null)
                    {
                        <div class="thumbnail">
                            <img src="@Model.BImgLog.ImageUpload.FilePath" class="barlogo" />
                        </div>
                    }
                    else
                    {
                        <div class="thumbnail">
                            <img src="~/Uploads/defaultImage.jpg" class="barlogo" />
                        </div>
                    }
                </div>
                <div class="col-lg-8 text-center">
                    <br/>
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="row">
                        <div class="col-lg-4">
                            <i class="fa fa-6x ion-beer text-primary sr-icons"></i>
                            <h3>@Html.ActionLink("Add Beer On Tap", "AddBeerOnTap")</h3>
                        </div>
                        <div class="col-lg-4">
                            <i class="fa fa-6x ion-ios-pint text-primary sr-icons"></i>
                            <h3>@Html.ActionLink("Add Beer In Pkg", "AddBeerInPkg")</h3>
                        </div>
                        <div class="col-lg-4">
                            <i class="fa fa-6x ion-images text-primary sr-icons"></i>
                            <h3>@Html.ActionLink("Change Bar Logo", "AddBarLogo")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</body>
</html>
