@model PickMyBeer.Models.Beer

@{
    ViewBag.Title = "View";
}



<div class="container">
    <div class="row">
        <br/>
        <div class="col-lg-6">
            <h2>Beer Details</h2>
        </div>
        <div class="col-lg-6">
            <br/>
            @Html.ActionLink("Fetch Beer Like This One", "PickMyBeer", "Home") | @Html.ActionLink("Back to My Beers", "MyBeers", "AppUser")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 text-center">
            <h2>
                <img class="detailThumb" src="@Model.LabelURL" />
            </h2>
        </div>
        <div class="col-lg-8">
            <div class="text-center">
                <h2>
                    @Model.Name
                </h2>
            </div>
            <div class="text-center">
                <h4>@Model.Brewery.Name</h4>
            </div>
            <div class="text-center">
                <h4>@Model.Brewery.City, @Model.Brewery.State</h4>
            </div>
            <div class="text-center">
                <h3>
                    @Model.Style.Name
                </h3>
            </div>
            <div class="text-center">
                <span>IBU: @Model.IBU</span>
            </div>
            <div class="text-center">
                <span>ABV: @Model.ABV</span>
            </div>
        </div>
    </div>
    <br/>

    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <h4>
                @Model.Description
            </h4>
        </div>
    </div>
</div>

