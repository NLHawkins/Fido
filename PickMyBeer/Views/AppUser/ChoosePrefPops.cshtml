<div class="container">
    <br/>
    <div class="row">
        <div class="col-lg-6">
            <h2>Choose Your Preferred Beer</h2>
        </div>
        <div class="col-lg-6 text-right">
            <br/>
            @Html.ActionLink("Back To Lists", "ChoosePref") | @Html.ActionLink("Home", "MyBeers") 
        </div>
    </div>
    <hr/>
    <div class="my_container">
        <ul>
            @foreach (var item in ViewBag.Pops)
            {
                <li class="block">
                    <a href="http://localhost:54414/Home/ChooseLoc?beerId=@item.Beer.Id">
                        <img src="@item.Beer.LabelURL" />
                        <span>@item.Beer.Name</span>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>

