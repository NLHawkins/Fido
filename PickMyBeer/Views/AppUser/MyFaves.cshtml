@model PickMyBeer.Models.FaveBeer
@{
    ViewBag.Title = "MyFaves";
}
<style>
    *, *:before, *:after {
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
    }
</style>
<div class="conatainer">
    <br />
    <div class="row">
        <div class="col-lg-6">
            <h2 class="text-primary">My Favorite Beers</h2>
        </div>
        <div class="col-lg-6">
            <div class="text-right">
                <br/>
                @Html.ActionLink("Add New Favorite", "AddBeerToFaves", null, new { @style= "color:#e5a815" }) | @Html.ActionLink("Back To My Beers", "MyBeers", null, new { @style = "color:#e5a815" })
            </div>
        </div>
    </div>
    
    

    <hr />
    <div class="my_container">
        <ul>
            @foreach (var item in ViewBag.Faves)
            {
                <li class="block">
                    <a href="http://localhost:54414/Beer/Details?beerId=@item.Beer.Id">
                        <img src="@item.Beer.LabelURL" />
                        <span>@item.Beer.Name</span>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
