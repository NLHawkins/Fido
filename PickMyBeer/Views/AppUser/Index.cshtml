


<html>
<head>
    <script src="http://code.jquery.com/jquery-3.1.0.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/_addBeer.js">
    </script>
</head>
<body>
    <div class="conatainer">
        <div class="col-lg-12">
            <div><h2>My Fave Beers</h2></div>
            <hr />
            <div>
                <ul class="faveBeers">
                    @if (ViewBag.UserFaves != null)
                    {
                        foreach (var beer in ViewBag.UserFaves)
                        {
                            string name = beer.Beer.Name;
                            <li>@Html.ActionLink(name, "Details", "Beer", new { beerId = beer.BeerId }, new { })</li>
                        }
                    }
                </ul>
            </div>
        </div>
</body>
</html>
