@{
    ViewBag.Title = "Home Page";
}
<script src="http://code.jquery.com/jquery-3.1.0.min.js" type="text/javascript"></script>
<script type="text/javascript" src="~/Scripts/_addBeer.js">
</script>
<style>
    table, tr, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>
<div class="conatainer">
    <div class="row">
        <h3>Search For A Beer By Its Name</h3>
        <input type="text" id="beer" />
        <button id="getBeer">Get Beer</button>

    </div>
    <div>
        <table>
            <thead>
            <th>Name</th>
            <th>Description</th>
            <th>Style</th>
            <th>Brewery</th>
            </thead>
            <tbody>
                <tr id="beers">
                    <td>
                        <button id="pickBeer">Pick Beer</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>  